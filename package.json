{
  "name": "infrastructure-damage-reporter",
  "version": "1.0.0",
  "description": "Infrastructure damage reporting application with frontend and backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "npm run start --workspace=frontend",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "lint": "npm run lint --workspace=frontend && npm run lint --workspace=backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "install:frontend": "npm install --workspace=frontend",
    "install:backend": "npm install --workspace=backend",
    "clean": "rm -rf frontend/node_modules frontend/.next backend/node_modules backend/dist"
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/Babagesh/Potbot.git"
  },
  "keywords": [
    "infrastructure",
    "damage-reporting",
    "computer-vision",
    "nextjs",
    "typescript"
  ],
  "author": "Your Team",
  "license": "MIT"
}